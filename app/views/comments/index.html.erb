<h1>Listing comments</h1>

<table>
  <tr>
    <th>Comments</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @comments.each do |comment| %>
  <tr>
    <td><%= comment.text %></td>

    <!-- /posts/:post_id/comments/:id -->
    <td><%= link_to 'Show', [comment.post, comment], :class => 'btn btn-default btn-xs' %></td>
    <!-- /posts/:post_id/comments/:id/edit -->
      <td><%= link_to 'Edit', edit_post_comment_path(comment.post, comment), :class => 'btn btn-default btn-xs' %></td>
      <!-- /posts/:post_id/comments/:id -->
      <td><%= link_to 'Destroy', [comment.post, comment], :confirm => 'Are you sure?', :method => :delete, :class => 'btn btn-danger btn-xs' %></td>

  </tr>
<% end %>
</table>

<br />

